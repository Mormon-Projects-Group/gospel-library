{
  "name": "mormon-projects-group/gospel-library",
  "description": "PHP library to access the LDS Gospel Library web service",
  "keywords": ["lds","mormon","gospel library","scriptures"],
  "homepage": "http://github.com/Mormon-Projects-Group/gospel-library",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Gospel\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "authors": [
    {
      "name": "Jared Howland",
      "homepage": "http://jaredhowland.com",
      "role": "developer"
    }
  ],
  "require": {
    "php": "^8.0",
    "guzzlehttp/guzzle": "^7.0"
  },
  "require-dev": {
    "phpdocumentor/phpdocumentor": "3.*",
    "phpunit/phpunit": "^10.0"
  },
  "scripts": {
    "test": "./vendor/bin/phpunit",
    "doc": "./vendor/bin/phpdoc"
  }
}
